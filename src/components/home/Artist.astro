---
import Facebook from "@components/icons/Facebook.astro";
import Instagram from "@components/icons/Instagram.astro";
import Threads from "@components/icons/Threads.astro";
import Tiktok from "@components/icons/Tiktok.astro";
import Youtube from "@components/icons/Youtube.astro";
import { useTranslations } from "@i18n/utils";
import { getRelativeLocaleUrl } from "astro:i18n";

const { item, lang, index } = Astro.props;
const bgArr = item.slug.split("/");
const slug = bgArr[1];

const t = useTranslations(lang);
const { name, img } = item.data;
const backgrounds = {
  maluma: "bg-maluma",
  xavi: "bg-xavi",
  drian: "bg-drian",
  "grupo-arriesgado": "bg-grupo-arriesgado",
} as const;

type BackgroundName = keyof typeof backgrounds;
const bg: BackgroundName = slug as BackgroundName;
const bgColor = "";
---

<picture
  class="img-artist z-10 md:w-1/3 w-3/4 flex-shrink-0 text-left h-[650px] max-md:h-[550px] overflow-hidden"
  data-aos="fade-in"
  data-aos-delay={index * 200}
>
  <a href={getRelativeLocaleUrl(lang, `/${slug}`)}>
    <img
      class="w-full h-[90%] object-cover rounded-lg bg-gray-900"
      src={`/${img}`}
      alt={name}
      transition:name={`img-${slug}`}
    />
    <h3 class="text-white text-3xl">{name}</h3>
  </a>
</picture>
